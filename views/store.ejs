
<%-include("header")-%>

<% if(message.length > 0){ %> 
    <div class="alert alert-success">
      <%= message %> 
    </div>
  <% } %> 

  
  <form action="/store" method="POST" enctype="multipart/form-data">

     <fieldset>
     <div class="store-section container-fluid white-section upload-form card">
         <div >
             <h2 class="big-heading">Submit Your Material Here!</h2>
         </div>
         <div class="row upload-form-row">
             <div class="col-lg-4">
                <h5>Department:</h5>
             </div>
             <div class="col-lg-4 selector-item">
               
                 <select name="department" id="departmentMenu"  class="custom-select" >
                 </select>
            </div>
            
             <div class="col-lg-4">

             </div>
        </div>
        <div class="row upload-form-row">
            <div class="col-lg-4">
                <h5>Year Of Study:</h5>
             </div>
             <div class="col-lg-4 selector-item">
                     <select id="yearMenu" name="yearOfStudy" class="custom-select" >
                       </select>
             </div>
            <div class="col-lg-4">

             </div>
         </div>
         <div class="row upload-form-row">
             <div class="col-lg-4">
                <h5>Semester:</h5>
             </div>
             <div class="col-lg-4 selector-item">
                 <select id="semMenu" name="semester" class="selectpicker btn-block btn-light" data-live-search="true" title="default">
                     <option value="EVEN" data-tokens="even">EVEN</option>
                     <option value="ODD" data-tokens="odd">ODD</option>
                   </select>
         </div>
             <div class="col-lg-4">

             </div>
         </div>
         <div class="row upload-form-row">
            <div class="col-lg-4">
                <h5>Subject:</h5>
             </div>
             <div class="col-lg-4 selector-item">
                 <select id="subject" name="subject" class=" custom-select" >
                   </select>
         </div>
             <div class="col-lg-4">

             </div>
         </div>
         <div class="row upload-form-row">
             <div class="col-lg-4">
                <h5>Unit:</h5>
             </div>
             <div class="col-lg-4 selector-item">
                 <select name="unit" class="selectpicker btn-block btn-light" data-style="btn-info" data-live-search="true" title="default">
                     <option value="1" data-tokens="1">1</option>
                    <option value="2" data-tokens="2">2</option>
                     <option value="3" data-tokens="3">3</option>
                     <option value="4" data-tokens="4">4</option>
                     <option value="5" data-tokens="5">5</option>
                     <option value="6" data-tokens="6">6</option>
                   </select>
         </div>
                      <div class="col-lg-4">

            </div>

         </div>
         <input id="userName" name="userName" type="hidden" value= <%=username %>>
         <div class="row upload-form-row">
             <div class="col-lg-4">
                <h5>File Name:</h5>
             </div>
            <div class="col-lg-4">
                 <input id="text" class=" btn-block btn-light" type="text" name="displayName"  placeholder="Add name to your file" >
             </div>
        </div>
         <div class="row upload-form-row">
             <div class="col-lg-4">
               <h5>File:</h5>
             </div>
             <div class="col-lg-4  ">
           <div class="custom-file mb-3">
             <input id="file" class="custom-file-input" type="file" name="file" aria-describedby="inputGroupFileAddon01" >
                <label for="file" class="custom-file-label">Choose File</label>
           </div>
             </div>
         </div>
        <div>
            <button class="btn btn-danger" type="submit">SUBMIT</button>
        </div>
         
     </div>
 </fieldset>
 </form>

 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
 <script src="/custom.js" charset="utf-8"></script>

 <%-include("footer")-%>
